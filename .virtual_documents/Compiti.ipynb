n = 100

array = np.ones(n, dtype=bool)
array[:2] = False #imposto a false i primi 2 numeri perchÃ© non primi
for i in range(2, int(n**0.5) + 1):
    if array[i]:
            # parti dal prossimo multiplo e scorri fino alla fine
            # e a ogni passo di "i" cioÃ¨ il numero primo attuale, quindi un multiplo lo togli
            array[i*i : n : i] = False
array = np.nonzero(array)[0]
print(array)




