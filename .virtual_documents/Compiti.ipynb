a = False






def f1(x):
    return np.sin(x)**2
def f2(x):
    return np.e**(-x**2)

N_LANCI = 1000
a = -5.
b = 5.
x = np.linspace(a, b, 1000)
y1 = f1(x)
y2 = f2(x)

fig, ax = plt.subplots(figsize = (6,3))
ax.plot(x,y1, label="$\sin(x**2)$", color= np.array([1,0.35,0]))
ax.plot(x,y2, label="$\sin(x**2)$", color= np.array([1,0,1]))
ax.grid()
ax.set_xlabel("$x$")
ax.set_ylabel("$y$")
ax.legend()
ax.set_title(f"Grafico delle funzioni f(x) e g(x)")
fig.set_facecolor("pink")
plt.show()



