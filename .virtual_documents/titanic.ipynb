def scatterAx(ax, df, cat, nameCat, p1, p2):
    for c in cat:
        data = df[df[nameCat] == c]
        ax.scatter(data[p1], data[p2], color = cat[c], alpha = 0.4, s = 45, label = c)

def histAx(ax, df, cat, nameCat, p1):
    for c in cat:
        data = df[df[nameCat] == c]
        ax.hist(data[p1], bins = 15, alpha = 0.5)



cols = data.columns.unique()
print(cols)

fig, axs = plt.subplots(nrows = 6, ncols = 6, figsize = (32,32))

for i in range(0,6):
    for j in range(0,6):
        if(i != j):
            scatterAx(axs[i][j], data, cols, "Survived", cols[i],cols[j])


sex_labelEncoder = LabelEncoder()
data["Sex_numeric"] = sex_labelEncoder.fit_transform(data["Sex"])
data.head(5)


sex_labelEncoder.classes_


sex_labelEncoder.transform(["male", "female"])


sex_labelEncoder.inverse_transform([1,1,0])





data.columns
feature_cols = ['Pclass', 'Age', 'Siblings/Spouses Aboard',
       'Parents/Children Aboard', 'Fare', 'Sex_numeric']
output = ["Survived"]

X = data[feature_cols].to_numpy()
y = data[output].to_numpy()

#Normalizzazione
#significa trasformare la feature in modo che abbia media 0 e deviazione standard 1
pclass = X[:,0]
pclass_norm = (pclass - np.mean(pclass)) /np.std(pclass)


#verifica che l'istogramma di pclass Ã¨ uguale all'istogramma di pclass_norm


feature_scaler = StandardScaler()
X_norm = feature_scaler.fit_transform(X)


X_train, X_test, y_train, y_test = train_test_split(X_norm, y, test_size = 0.33, random_state=42)


neural_network = MLPClassifier(hidden_layer_sizes = (7,5,5),max_iter = 1000)
neural_network.fit(X_train, y_train.reshape(-1))


neural_network.score(X_test, y_test)





